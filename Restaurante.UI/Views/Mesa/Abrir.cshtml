@model Restaurante.UI.ViewModel.MesaAbertaViewModel

@{
    ViewBag.Title = "Abrir Mesa";
    var garcons = ViewBag.Garcons;
}

<h3>Abrir Mesa</h3>
<hr />
@using (Html.BeginForm(null, null, FormMethod.Post))
{

    <fieldset>
        <div class="form-horizontal">

            @{
                if (!string.IsNullOrEmpty(ViewBag.Mensagem as string))
                {
                    <div class="form-group">
                        <div class="alert alert-danger glyphicon glyphicon-thumbs-down" role="alert">
                            <b>@ViewBag.Mensagem</b>
                        </div>
                    </div>
                }
            }

            <div class="form-group">
                @Html.LabelFor(model => model.NumMesa)
                @Html.TextBoxFor(model => model.NumMesa, new { @class = "form-control number required" })
                @Html.ValidationMessageFor(model => model.NumMesa, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Garçon/Garçonete</label>
                @Html.DropDownListFor(x => x.Garcom.Id, Model.Garcons.Select(g => new SelectListItem { Value = g.Id.ToString(), Text = g.Nome }), "Selecione", new
                {
                    @class = "form-control",
                    @required = "required"
                })
                @Html.ValidationMessageFor(model => model.Garcons, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enviar" class="btn btn-default btn-primary " />
                </div>
            </div>
        </div>
    </fieldset>
}